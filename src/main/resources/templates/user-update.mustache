{{>layout/header}}

<h1>사용자 수정</h1>

<div class="col-md-12">
    <div class="col-md-4">
        <form>
            <div class="form-group">
                <label for="id">유저ID</label>
                <input type="text" class="form-control" id="id" value="{{user.id}}" readonly>
            </div>
            <div class="form-group">
                <label for="title">이름</label>
                <input type="text" class="form-control" id="name" value="{{user.name}}">
            </div>
            <div class="form-group">
                <label for="author">이메일</label>
                <input type="text" class="form-control" id="email" value="{{user.email}}" readonly>
            </div>
            <div class="form-group">
                <label for="title">프로필사진</label>
                <input type="text" class="form-control" id="picture" value="{{user.picture}}">
            </div>
            <div class="form-group">
                <label for="title">닉네임</label>
                <input type="text" class="form-control" id="nickname" value="{{user.nickname}}">
            </div>
        </form>
        <a href="/" role="button" class="btn btn-secondary">취소</a>
        <button type="button" class="btn btn-primary" id="btn-updateUser">수정 완료</button>
        <button type="button" class="btn btn-danger" id="btn-deleteUser">회원 탈퇴</button>
    </div>
</div>

{{>layout/footer}}